{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Konf YAML",
    "scopeName": "source.konf-yaml",
    "patterns": [
        { "include": "#metadata" },
        { "include": "#template" },
        { "include": "#yaml" }
    ],
    "repository": {
        "metadata": {
            "name": "meta.metadata.konf",
            "match": "^(<!>)(:)",
            "captures": {
                "1": { "name": "keyword.control.metadata.konf" },
                "2": { "name": "punctuation.separator.key-value.yaml" }
            }
        },
        "template": {
            "name": "meta.template.konf",
            "match": "(\\$\\{)([^}]+)(\\})",
            "captures": {
                "1": { "name": "punctuation.definition.template.begin.konf" },
                "2": {
                    "name": "variable.other.template.konf",
                    "patterns": [
                        {
                            "match": "([^.]+)(\\.)?",
                            "captures": {
                                "1": { "name": "entity.name.tag.konf" },
                                "2": { "name": "punctuation.separator.konf" }
                            }
                        }
                    ]
                },
                "3": { "name": "punctuation.definition.template.end.konf" }
            }
        },
        "yaml": {
            "patterns": [
                { "include": "#comment" },
                { "include": "#key" },
                { "include": "#string" },
                { "include": "#number" },
                { "include": "#boolean" },
                { "include": "#null" }
            ]
        },
        "comment": {
            "name": "comment.line.number-sign.yaml",
            "match": "#.*$"
        },
        "key": {
            "name": "entity.name.tag.yaml",
            "match": "^\\s*([^:#\\s][^:#]*)\\s*:"
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double.yaml",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        { "include": "#template" },
                        { "name": "constant.character.escape.yaml", "match": "\\\\." }
                    ]
                },
                {
                    "name": "string.quoted.single.yaml",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        { "name": "constant.character.escape.yaml", "match": "''" }
                    ]
                }
            ]
        },
        "number": {
            "name": "constant.numeric.yaml",
            "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        },
        "boolean": {
            "name": "constant.language.boolean.yaml",
            "match": "\\b(true|false|yes|no|on|off)\\b"
        },
        "null": {
            "name": "constant.language.null.yaml",
            "match": "\\b(null|~)\\b"
        }
    }
}
